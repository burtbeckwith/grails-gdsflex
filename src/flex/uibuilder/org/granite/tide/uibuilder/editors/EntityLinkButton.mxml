<mx:LinkButton
    xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns="*"
    label="{DataGridListData(listData).label}" 
    click="handleClick()">
	
	<mx:Script>
        <![CDATA[
        	import flash.utils.getQualifiedClassName;
        	import org.granite.tide.spring.Context;
        	import mx.controls.DataGrid;
            import mx.controls.dataGridClasses.DataGridListData;
        	import org.granite.tide.uibuilder.events.EditEntityEvent;
        	
        	public var context:Context;
        	
        	private function handleClick():void {
        		var targetEntity:Object =  data[DataGridListData(listData).dataField];
            	var className:String = getQualifiedClassName(targetEntity);
            	var qualifiedEntityName:String = className.replace("::", ".").toLowerCase();
            	// Dispatch the EditEntityEvent in the subcontext of the clicked entity
				context[qualifiedEntityName].dispatchEvent(new EditEntityEvent(targetEntity));        	
			}
      	]]>
	</mx:Script>

</mx:LinkButton>
